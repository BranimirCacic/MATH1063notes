        Label linelabel = Label("$1$", position=EndPoint);
        draw ((1,1) -- (1,-0.05), L=linelabel);

        arrowbar axisarrow = Arrow(TeXHead);
        Label nula = Label("$0$", position=BeginPoint);
        Label xlabel = Label("$+x$", position=EndPoint);
